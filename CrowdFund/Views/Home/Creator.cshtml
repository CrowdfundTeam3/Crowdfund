<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="create-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Create</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="projects-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">My Projects</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active justify-content-center" id="js-create" role="tabpanel" aria-labelledby="home-tab">
        <form class="col-4">
            <div class="form-group">
                <label for="project-title">Title</label>
                <input type="text" class="form-control" id="project-title" placeholder="Enter project title">
            </div>
            <div class="form-group">
                <label for="project-description">Description</label>
                <textarea class="form-control" id="project-description" rows="3" placeholder="Enter project description"></textarea>
            </div>
            <div class="form-group">
                <label for="project-category">Category</label>
                <select class="form-control" id="project-category">
                    <option>Technology</option>
                    <option>Arts</option>
                    <option>Design</option>
                    <option>Games</option>
                    <option>Music</option>
                </select>
            </div>
            <div class="form-group">
                <label for="project-photo">Choose a photo</label>
                <input type="file" class="form-control-file" id="project-photo">
            </div>
            <div class="form-group">
                <label for="project-video">Choose a video</label>
                <input type="file" class="form-control-file" id="project-video">
            </div>
            <div class="form-group">
                <label for="project-status">Category</label>
                <select class="form-control" id="project-status">
                    <option>Design</option>
                    <option>In development</option>
                    <option>Close to production</option>
                </select>
            </div>
            <button id="js-create-button" type="button" class="btn btn-primary">Publish Project</button>
        </form>
    </div>
    <div class="tab-pane fade" id="projects" role="tabpanel" aria-labelledby="profile-tab">...</div>
</div>