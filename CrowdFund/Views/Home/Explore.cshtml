@model CrowdFund.Models.ProjectModel
@{
}
<div class="container">
    <div id="projects-content">
        <div class="row justify-content-between d-flex">
            <nav class="navbar navbar-expand-md navbar-light bg-light w-100">
                <button class="navbar-toggler" type="button" id="navbar-menu" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="clicked-category-button">
                    <ul class="navbar-nav mt-2 mt-lg-0 d-flex justify-content-around">
                        <li class="nav-category-item">
                            <a class="nav-link" href="#">Arts</a>
                        </li>
                        <li class="nav-category-item">
                            <a class="nav-link" href="#">Design</a>
                        </li>
                        <li class="nav-category-item">
                            <a class="nav-link" href="#">Games</a>
                        </li>
                        <li class="nav-category-item">
                            <a class="nav-link" href="#">Music</a>
                        </li>
                        <li class="nav-category-item">
                            <a class="nav-link" href="#">Technology</a>
                        </li>
                    </ul>
                </div>
                <div >
                    <div class="input-group">
                        <input id="search-input" class="form-control" type="text" name="search">
                        <div class="input-group-append">
                            <button id="search-button" class="btn  btn-sm btn-secondary my-sm-0" type="button">Search</button>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <div id="project-list" class="row mt-3 justify-content-center" style="margin-top: 2%;">
        @foreach (var project in Model.projectOptions)
        {
            <div class="card col-9 col-sm-5 col-md-4 col-lg-3 text-center p-0 d-inline-block my-2 mr-sm-2" style="height:400px;">
                <img class="card-img-top" src="@project.Photo" alt="Card image cap" width="286" height="180">
                <div class="card-body">
                    <h5 class="card-title">
                        @project.Title
                    </h5>
                    <p class="card-text desc">
                        @project.Description
                    </p>
                    <div class="d-flex justify-content-center">
                        <button id="js-go-to-project" onclick="projectDetails(@project.Id);" class="col-6 btn btn-dark text-light" style="position:absolute; bottom:25px;">Details</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>