@model CrowdFund.Models.ProjectModel
@{
    ViewData["Title"] = "Home Page";
}


<div id="projects-content">
    <div class="row justify-content-between d-flex">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Search by category
            </button>
            <div class="dropdown-menu" id=clicked-category-button aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Arts</a>
                <a class="dropdown-item" href="#">Design</a>
                <a class="dropdown-item" href="#">Games</a>
                <a class="dropdown-item" href="#">Music</a>
                <a class="dropdown-item" href="#">Technology</a>
            </div>
        </div>
        <div class="ml-auto">
            <div class="input-group mb-3">
                <input id="search-input" class="form-control" type="text" name="search">
                <div class="input-group-append">
                    <button id="search-button" class="btn  btn-sm btn-secondary my-2 my-sm-0" type="button">Search</button>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid text-center my-3">
    <h5 class="mt-2">Most popular projects</h5>
    <div class="row mx-auto my-auto">
        <div id="recipeCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" style="height:80vh" role="listbox">

                @{
                    var i = 0;
                }
                @foreach (var project in Model.projectOptions)
                {
                    {
                        i += 1;
                    }
                    <div class="carousel-item @(i == 1 ? "active" : "")">
                        <div class="col-md-4">
                            <img class="card-img-top" src="uploadedimages/@project.Photo" alt="Card image cap" style="height:60%">
                            <div class="card-body">
                                <h5 class="card-title">
                                    @project.Title
                                </h5>
                                <p class="card-text">
                                    @project.Description
                                </p>
                                <button onclick="projectDetails(@project.Id);" class="btn btn-secondary">Details</button>
                            </div>
                        </div>
                    </div>
                }




            </div>
            <a class="carousel-control-prev w-auto" href="#recipeCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon bg-dark border border-dark rounded-circle" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next w-auto" href="#recipeCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon bg-dark border border-dark rounded-circle" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>




<div id="project-list" class="d-none row mt-3 justify-content-center" style="margin-top: 2%;">
    @foreach (var project in Model.projectOptions)
    {
        <div class="card col-9 col-sm-5 col-md-4 col-lg-3 text-center p-0 d-inline-block my-2 mr-sm-2" style="height:400px;">
            <img class="card-img-top" src="uploadedimages/@project.Photo" alt="Card image cap" width="286" height="180">
            <div class="card-body">
                <h5 class="card-title">
                    @project.Title
                </h5>
                <p class="card-text">
                    @project.Description
                </p>
                <button onclick="projectDetails(@project.Id);" class="btn btn-secondary">Details</button>
            </div>
        </div>
    }
</div>
